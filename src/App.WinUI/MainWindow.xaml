<Window
    x:Class="CopyOpsSuite.App.WinUI.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="using:CopyOpsSuite.App.WinUI"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
    mc:Ignorable="d"
    Title="CopyOps Suite" Height="720" Width="1280">

    <Grid>
        <muxc:NavigationView x:Name="ShellNavigation"
                             PaneDisplayMode="Left"
                             IsSettingsVisible="False"
                             SelectionChanged="OnNavigationSelectionChanged">
            <muxc:NavigationView.MenuItems>
                <muxc:NavigationViewItem Content="Copy" Icon="Cloud" Tag="Copy" IsSelected="True"/>
                <muxc:NavigationViewItem Content="Cash" Icon="Wallet" Tag="Cash"/>
                <muxc:NavigationViewItem Content="Audit" Icon="Broadcast" Tag="Audit"/>
                <muxc:NavigationViewItem Content="History" Icon="History" Tag="History"/>
                <muxc:NavigationViewItem Content="Settings" Icon="Settings" Tag="Settings"/>
            </muxc:NavigationView.MenuItems>
            <Frame x:Name="ContentFrame" />
        </muxc:NavigationView>
    </Grid>
</Window>
